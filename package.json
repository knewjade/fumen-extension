{
  "name": "chrome_extension",
  "version": "0.0.1",
  "private": true,
  "scripts": {
    "webpack": "yarn run webpack-content && yarn run webpack-background",
    "webpack:prod": "yarn run webpack-content:prod && yarn run webpack-background:prod",
    "webpack-content": "webpack --mode development --config webpack-content.config.js",
    "webpack-content:prod": "webpack --mode production --config webpack-content.config.js",
    "webpack-background": "webpack --mode development --config webpack-background.config.js",
    "webpack-background:prod": "webpack --mode production --config webpack-background.config.js",
    "lint": "tslint --project tsconfig.json --config tslint.json",
    "test": "jest"
  },
  "devDependencies": {
    "@types/jest": "23.3.1",
    "@types/node": "10.5.7",
    "jest": "23.4.2",
    "ts-jest": "23.1.3",
    "ts-loader": "4.4.2",
    "tslint": "5.11.0",
    "tslint-config-airbnb": "5.9.2",
    "typescript": "3.0.1",
    "webpack": "4.16.5",
    "webpack-cli": "3.1.0"
  },
  "dependencies": {
    "tippy.js": "2.5.4"
  }
}
